<% provide(:title, "Search") %>

<%= form_tag cards_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag("Search Name", :name => nil, class: 'btn btn-large btn-primary') %>
<% end %>

<%= form_tag cards_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search Price", :price => nil, class: 'btn btn-large btn-primary'%>
<% end %>

<%= link_to "Back to all", cards_path, class: 'btn btn-large btn-primary' %>

<ul class="cards">
	<%= render @cards %>
</ul>

